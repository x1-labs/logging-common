{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "eslint \"packages/*/src/**/*.ts\" --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "check": "bun run format && bun run lint && bun run typecheck",
    "bump": "./scripts/bump-version.sh",
    "publish-all": "bun run build && npm publish --workspaces --access public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "express": "^5.1.0",
    "nestjs-pino": "^4.5.0",
    "pino": "^10.3.0",
    "pino-http": "^10.0.0",
    "pino-logfmt": "^1.0.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
